<div class="bio">
  <div class="alignlast">
    <h2><%= @post.title %> by <%= @user.name %></h2>
    <span>Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></span>
  </div>
  <p>
    <%= @post.text %>
  </p>
</div>
<%= button_to "Like", like_post_path(@user, @post), method: :post %>

<ul>
  <% @post_comments.each do |comment| %>
    <li><%= comment.user.name %>: <%= comment.text %></li>
  <% end %>
</ul>
