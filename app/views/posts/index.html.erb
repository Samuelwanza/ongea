
<div class="user-card">
  <%= image_tag @user.photo, alt: 'User Avatar', class: 'image' %>
  <div class="user-wrapper">
    <h2><%= @user.name %></h2>
    <p>Number of posts: <%= @user.posts_counter %></p>
  </div>
</div>

<% @user_posts.each do |post| %>
  <%= link_to post_path(@user, post) do %>
    <div class="bio posts">
      <h2><%= post.title %></h2>
      <p><%= post.text %></p>
      <div class="alignlikes">
        <span>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></span>
      </div>
    </div>
  <% end %>

  <% post.recent_comments.each do |comment| %>
    <ul>
      <li><%= comment.user.name %>: <%= comment.text %></li>
    </ul>
  <% end %>
<% end %>
<div class="btn-link">
  <%=link_to "pagination", posts_path(@user), class:"seelink"%> 
</div>
