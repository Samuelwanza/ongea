
<div class="user-card">
  <%= image_tag @user.photo, alt: 'User Avatar', class:"image"%>
  <div class="user-wrapper">
      <h2><%=@user.name%></h2>
      <p>Number of posts:<%=@user.posts_counter%></p>
  </div>
</div>

<div class="bio">
  <h2>Bio</h2>
  <p>
    <%=@user.bio%>
  </p>
</div>

<% @user.recent_posts.each do |post|%>
  <%=link_to post_path(@user,post) do %>
    <div class="bio posts">
      <h2><%=post.title%></h2>
      <p>
        <%=post.text%>
      </p>
      <div class="alignlikes">
            <span>Comments:<%=post.comments_counter%>,likes:<%= post.likes_counter %></span>
      </div>
    </div>
  <%end%>
<%end%>
<div class="btn-link">
  <%=link_to "See all posts", posts_path(@user), class:"seelink"%> 
</div>

