<% @users.each do |user|%>
    <%= link_to user_path(user) do %>
        <div class="user-card">
            <%= image_tag user.photo, alt: 'User Avatar', class:"image"%>
            <div class="user-wrapper">
                <h2><%=user.name%></h2>
                <p>Number of posts:<%=user.posts_counter%></p>
            </div>
        </div>
    <%end%>
<% end%>

